{
  "$schema": "http://json-schema.org/schema#",
  "descriptions": {
    "paragraph": {
      "type": "object",
      "properties": {
        "speaker": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            }
          }
        },
        "type": {
          "type": "string"
        },
        "content": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string"
              },
              "text": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  },
  "type": "object",
  "properties": {
    "content": {
      "type": "array",
      "items": {
        "allOf": [{
          "$ref": "#/descriptions/paragraph"
        }]
      }
    },
    "id": {
      "type": "string"
    }
  }
}
